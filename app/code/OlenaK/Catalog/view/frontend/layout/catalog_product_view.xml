<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content" >
            <block name="olenak.catalog.text.product.warning"
                   class="Magento\Framework\View\Element\Template"
                   template="OlenaK_Catalog::product_warning.phtml"
                   before="product.info.details"
            >
                <arguments>
                    <argument name="message" xsi:type="string">This is a demo product. You can add them to cart and place order only to test the Magento</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
