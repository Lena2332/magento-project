<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
      layout="2columns-right"
>
    <body>
        <referenceContainer name="content">
            <block name="olenak.regularcustomer.title"
                   class="Magento\Framework\View\Element\Template"
                   template="OlenaK_RegularCustomer::catalog/product/view/title_form.phtml"
                   ifconfig="olenak_regular_customer/general/enabled"
            >
                <arguments>
                    <argument name="title_txt" xsi:type="string">Loyalty program for Regular Customers</argument>
                </arguments>
            </block>
            <block name="olenak.regularcustomer.cmsblock"
                   class="Magento\Cms\Block\BlockByIdentifier"
                   ifconfig="olenak_regular_customer/general/enabled"
            >
                <arguments>
                    <argument name="identifier" xsi:type="string">cms_block_regular_customer</argument>
                </arguments>
            </block>
            <block class="OlenaK\RegularCustomer\Block\Product\View\ProductDiscountBlock"
                   name="olenak.regularcustomer.form.block"
                   template="OlenaK_RegularCustomer::catalog/product/view/form_block.phtml"
                   ifconfig="olenak_regular_customer/general/enabled"
                   after="-"
            >
                <arguments>
                    <argument name="cache_lifetime" xsi:type="number">84600</argument>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="regularCustomerRequest" xsi:type="array">
                                <item name="component" xsi:type="string">uiCollection</item>
                                <item name="children" xsi:type="array">
                                    <item name="regularCustomerRequestForm" xsi:type="array">
                                        <item name="component" xsi:type="string">OlenaK_RegularCustomer_form</item>
                                        <item name="displayArea" xsi:type="string">olenaK_regularCustomer_form</item>
                                        <item name="config" xsi:type="array">
                                            <item name="action"
                                                  xsi:type="url"
                                                  path="regular-customer/index/request"
                                            />
                                            <item name="productId" xsi:type="number">0</item>
                                            <item name="productName" xsi:type="string">ProductName</item>
                                            <item name="isModal" xsi:type="boolean">1</item>
                                        </item>
                                    </item>
                                    <item name="olenak.regularcustomer.form.open.button" xsi:type="array">
                                        <item name="component" xsi:type="string">OlenaK_RegularCustomer_formOpenButton</item>
                                        <item name="displayArea" xsi:type="string">olenaK_regularCustomer_formOpenButton</item>
                                        <item name="config" xsi:type="array">
                                            <item name="imports" xsi:type="array">
                                                <item name="isModal" xsi:type="string">regularCustomerRequest.regularCustomerRequestForm:isModal</item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
