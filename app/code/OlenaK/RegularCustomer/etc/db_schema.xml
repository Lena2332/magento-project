<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="olenak_regular_customer_request" resource="default" engine="innodb" comment="Regular Customer">
        <column xsi:type="int" name="request_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Request ID"
        />
        <column xsi:type="int" name="product_id"  padding="10" unsigned="true" nullable="true"
                comment="Product ID"
        />
        <column xsi:type="int" name="customer_id" padding="10" unsigned="true" nullable="true"
                comment="Customer ID"
        />
        <column xsi:type="int" name="admin_user_id" padding="10" unsigned="true" nullable="true"
                comment="Admin user ID"
        />
        <column xsi:type="varchar" name="name" nullable="false" length="255"
                comment="Name"
        />
        <column xsi:type="varchar" name="email" nullable="false" length="255"
                comment="Email"
        />
        <column xsi:type="smallint" name="store_id" padding="5" unsigned="true" nullable="true"
                comment="Store ID"
        />
        <column xsi:type="int" name="user_id" padding="10" unsigned="true" nullable="true"
                comment="User ID"
        />
        <column xsi:type="smallint" name="status" padding="2" unsigned="true" nullable="false" default="1"
                comment="Status"
        />
        <column xsi:type="smallint" name="email_sent" padding="2" unsigned="true" nullable="false" default="0"
                comment="Email Sent"
        />
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Created At"
        />
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Updated At"
        />
        <column xsi:type="timestamp" name="status_changed_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Status Changed At"
        />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="request_id"/>
        </constraint>
        <index referenceId="OLENAK_REGULAR_CUSTOMER_REQUEST_PRODUCT_ID" indexType="btree">
            <column name="product_id"/>
        </index>
        <index referenceId="OLENAK_REGULAR_CUSTOMER_REQUEST_CUSTOMER_ID" indexType="btree">
            <column name="customer_id"/>
        </index>
        <index referenceId="OLENAK_REGULAR_CUSTOMER_REQUEST_ADMIN_USER_ID" indexType="btree">
            <column name="admin_user_id"/>
        </index>
        <index referenceId="OLENAK_REGULAR_CUSTOMER_REQUEST_STORE_ID" indexType="btree">
            <column name="store_id"/>
        </index>
        <constraint xsi:type="foreign"
                    referenceId="OLENAK_REGULAR_CSTR_REQUEST_PRD_ID_CAT_PRD_ENTT_ENTT_ID"
                    table="olenak_regular_customer_request"
                    column="product_id"
                    referenceTable="catalog_product_entity"
                    referenceColumn="entity_id"
                    onDelete="SET NULL"
        />
        <constraint xsi:type="foreign"
                    referenceId="OLENAK_REGULAR_CSTR_REQUEST_CSTR_ID_CSTR_ENTT_ENTT_ID"
                    table="olenak_regular_customer_request"
                    column="customer_id"
                    referenceTable="customer_entity"
                    referenceColumn="entity_id"
                    onDelete="SET NULL"
        />
        <constraint xsi:type="foreign"
                    referenceId="OLENAK_REGULAR_CUSTOMER_REQUEST_STORE_ID_STORE_STORE_ID"
                    table="olenak_regular_customer_request"
                    column="store_id"
                    referenceTable="store"
                    referenceColumn="store_id"
                    onDelete="SET NULL"
        />
        <constraint xsi:type="foreign"
                    referenceId="OLENAK_REGULAR_CSTR_REQUEST_ADM_USR_ID_ADM_USR_USR_ID"
                    table="olenak_regular_customer_request"
                    column="admin_user_id"
                    referenceTable="admin_user"
                    referenceColumn="user_id"
                    onDelete="SET NULL"
        />
    </table>
    <table name="quote" resource="default" engine="innodb">
        <column
            xsi:type="decimal"
            name="regular_customer"
            nullable="true"
            comment="Base Regular Customer"
            scale="4"
            precision="20"
        />
        <column
            xsi:type="decimal"
            name="base_regular_customer"
            nullable="true"
            comment="Regular Customer"
            scale="4"
            precision="20"
        />
    </table>
    <table name="sales_order" resource="default" engine="innodb">
        <column xsi:type="decimal"
                name="regular_customer"
                scale="4"
                precision="20"
                nullable="true"
                comment="Regular Customer"
        />
        <column xsi:type="decimal"
                name="base_regular_customer"
                scale="4"
                precision="20"
                nullable="true"
                comment="Base Regular Customer"
        />
    </table>
</schema>
